{
  "image": "mcr.microsoft.com/devcontainers/base:debian",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "./features/pixi": {
      "addPathToShellRcFiles": false
    }
  },
  "initializeCommand": "cp -R ./src/. ./.devcontainer/features",
  "onCreateCommand": "sudo chown ${USER} ./node_modules",
  "updateContentCommand": "pixi run npm-install",
  "mounts": [
    "source=devcontainer-node_modules-${localWorkspaceFolderBasename},target=${containerWorkspaceFolder}/node_modules,type=volume"
  ],
  "remoteEnv": {
    "PATH": "${containerWorkspaceFolder}/bin:${containerWorkspaceFolder}/.pixi/env/bin:${containerWorkspaceFolder}/node_modules/.bin:${containerEnv:PATH}"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "dprint.dprint",
        "timonwong.shellcheck",
        "EditorConfig.EditorConfig",
        "mads-hartmann.bash-ide-vscode"
      ]
    }
  }
}
